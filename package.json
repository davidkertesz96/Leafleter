{
  "name": "leafleter",
  "version": "0.1.1",
  "private": true,
  "description": "Leaflet Delivery Helper desktop app (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -l",
    "build:linux": "electron-builder --linux AppImage deb",
    "build:win": "electron-builder --win nsis",
    "build:mac": "electron-builder --mac dmg"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^24.13.3"
  },
  "keywords": [],
  "type": "commonjs",
  "dependencies": {},
  "build": {
    "appId": "com.leafleter.app",
    "productName": "Leafleter",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**",
      "!**/*.map"
    ],
    "publish": null,
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities"
    }
  }
}
